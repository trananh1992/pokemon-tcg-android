<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="horizontal" android:cacheColorHint="#00000000"
	android:background="@drawable/listback" android:paddingBottom="10dp">
	<fr.codlab.cartes.ImageCarte android:id="@+id/image"
		android:scaleType="fitEnd" android:layout_gravity="top|left"
		android:layout_width="113px" android:layout_height="150px"
		android:src="@drawable/image" />
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_gravity="top" android:layout_weight="1">
		<TextView android:id="@+id/carte" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textSize="18px"
			android:textStyle="bold" android:background="@drawable/cardname" />
		<!-- partie inferieure -->
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:orientation="vertical">
			<!-- partie numero + type + rarete -->
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal"
				android:paddingTop="5dp" android:paddingBottom="5dp">
				<TextView android:id="@+id/infos" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:background="@drawable/cardnumber" />


				<LinearLayout android:id="@+id/vue.types"
					android:orientation="horizontal" android:layout_width="fill_parent"
					android:layout_height="fill_parent" android:layout_gravity="right"
					android:gravity="right">
					<!-- <LinearLayout android:layout_width="wrap_content" android:layout_height="fill_parent" 
						android:background="@drawable/energyback" android:layout_gravity="center_vertical"> -->
					<ImageView android:id="@+id/rarete" android:layout_width="20dp"
						android:layout_height="20dp" android:src="@drawable/rarete_common"
						android:padding="5dp" />
					<!-- </LinearLayout> -->
				</LinearLayout>
			</LinearLayout>
			<!-- partie - + texte -->
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:orientation="vertical">
				<!-- HOLO -->
				<LinearLayout android:id="@+extension/holo" android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:orientation="horizontal"
					android:layout_gravity="center_vertical" android:layout_weight="1">"
					<TextView android:text="Holo"
						android:layout_width="wrap_content" android:layout_height="fill_parent" android:gravity="center_vertical"/>
					<ImageView android:id="@+id/holocarte.sub" android:layout_gravity="left"
						android:layout_height="wrap_content" android:layout_width="wrap_content"
						android:src="@drawable/minus" android:padding="5dp"/>
					<ImageView android:id="@+id/holocarte.add" android:layout_gravity="right"
						android:layout_height="wrap_content" android:layout_width="wrap_content"
						android:src="@drawable/plus"  android:padding="5dp"/>
					<TextView android:id="@+id/holocarte.possedees"
						android:layout_width="wrap_content" android:layout_height="fill_parent" android:gravity="center_vertical"/>
				</LinearLayout>
				<!-- REVERSE -->
				<LinearLayout android:id="@+extension/reverse" android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:orientation="horizontal"
					android:layout_gravity="center_vertical" android:layout_weight="1">
					<TextView android:text="Reverse"
						android:layout_width="wrap_content" android:layout_height="fill_parent" android:gravity="center_vertical"/>
					<ImageView android:id="@+id/reversecarte.sub" android:layout_gravity="left"
						android:layout_height="wrap_content" android:layout_width="wrap_content"
						android:src="@drawable/minus" android:padding="5dp"/>
					<ImageView android:id="@+id/reversecarte.add" android:layout_gravity="right"
						android:layout_height="wrap_content" android:layout_width="wrap_content"
						android:src="@drawable/plus"  android:padding="5dp"/>
					<TextView android:id="@+id/reversecarte.possedees"
						android:layout_width="wrap_content" android:layout_height="fill_parent" android:gravity="center_vertical"/>
				</LinearLayout>
				<!-- NORMAL -->
				<LinearLayout android:id="@+extension/normal" android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:orientation="horizontal"
					android:layout_gravity="center_vertical" android:layout_weight="1">
					<TextView android:text="Normal"
						android:layout_width="wrap_content" android:layout_height="fill_parent" android:gravity="center_vertical"/>
					<ImageView android:id="@+id/carte.sub" android:layout_gravity="left"
						android:layout_height="wrap_content" android:layout_width="wrap_content"
						android:src="@drawable/minus" android:padding="5dp"/>
					<ImageView android:id="@+id/carte.add" android:layout_gravity="right"
						android:layout_height="wrap_content" android:layout_width="wrap_content"
						android:src="@drawable/plus"  android:padding="5dp"/>
					<TextView android:id="@+id/carte.possedees"
						android:layout_width="wrap_content" android:layout_height="fill_parent" android:gravity="center_vertical"/>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
